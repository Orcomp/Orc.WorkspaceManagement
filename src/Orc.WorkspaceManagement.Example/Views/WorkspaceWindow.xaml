<catel:DataWindow x:Class="Orc.WorkspaceManagement.Example.Views.WorkspaceWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:catel="http://catel.codeplex.com"
                  xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

    <catel:StackGrid>
        <catel:StackGrid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="400" />
        </catel:StackGrid.ColumnDefinitions>
        
        <TextBlock Text="Title" />
        <TextBox Text="{Binding WorkspaceTitle, NotifyOnValidationError=True, ValidatesOnDataErrors=True}">
            <i:Interaction.Behaviors>
                <catel:UpdateBindingOnTextChanged />
            </i:Interaction.Behaviors>
        </TextBox>
    </catel:StackGrid>
    
</catel:DataWindow>
