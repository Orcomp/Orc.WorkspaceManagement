<catel:DataWindow x:Class="Orc.WorkspaceManagement.Example.Views.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:catel="http://catel.codeplex.com"
                  ShowInTaskbar="True" ResizeMode="CanResize" SizeToContent="Manual" WindowStartupLocation="Manual" WindowState="Normal"
                  MinWidth="600" MinHeight="400">

    <catel:StackGrid x:Name="LayoutRoot">
        <catel:StackGrid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </catel:StackGrid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding LoadWorkspace}" Content="Load..." />
            <Button Command="{Binding RefreshWorkspace}" Content="Refresh" />
            <Button Command="{Binding SaveWorkspace}" Content="Save" />
            <Button Command="{Binding SaveWorkspaceAs}" Content="Save as..." />
            <Button Command="{Binding OpenFile}" Content="Open file..." />
        </StackPanel>

        <Label>
            <TextBlock TextWrapping="Wrap">
                Use any of the buttons above to manage the workspace. It shows how to use the workspace manager and how
                to interact with it.
            </TextBlock>
        </Label>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Label Grid.Row="0" Grid.Column="0" Content="First name" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FirstName}" />

            <Label Grid.Row="1" Grid.Column="0" Content="Middle name" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding MiddleName}" />

            <Label Grid.Row="2" Grid.Column="0" Content="Last name" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding LastName}" />
        </Grid>
        
        <catel:EmptyCell Grid.ColumnSpan="1" />
        
        <TextBox x:Name="outputTextBox" IsReadOnly="True" Height="200" />
    </catel:StackGrid>

</catel:DataWindow>
